@model MOE.Common.Business.WCFServiceLibrary.PCDOptions
<div class="panel panel-default ">
    <div class="panel-heading">Purdue Coordination Diagram Options</div>
    <div class="panel-body">

        <div class="">
            @Html.LabelFor(model => model.YAxisMax, new { htmlAttributes = new { @class = "control-label" } })
            @Html.EditorFor(model => model.YAxisMax, new { htmlAttributes = new { @class = "form-control", placeholder = "Auto" } })
        </div>
        <div class="">
            @Html.LabelFor(model => model.Y2AxisMax, new { htmlAttributes = new { @class = "control-label" } })
            @Html.EditorFor(model => model.Y2AxisMax, new { htmlAttributes = new { @class = "form-control", placeholder = "Auto" } })
        </div>
        <div class="">
            @Html.LabelFor(model => model.SelectedBinSize, new { htmlAttributes = new { @class = "control-label" } })
            @Html.DropDownListFor(model => model.SelectedBinSize,
            new SelectList(Model.VolumeBinSizeList, 15), new { @id = "SelectedBinSize", @class = "form-control col-md-6" })
            @Html.ValidationMessageFor(model => model.SelectedBinSize, "", new { id = "SelectedBinSize-error", @class = "text-danger" })
        </div>
        <div class="">
            @Html.LabelFor(model => model.SelectedDotSize, new { htmlAttributes = new { @class = "control-label" } })
            @Html.DropDownListFor(model => model.SelectedDotSize,
            new SelectList(Model.DotSizeList, "ID", "Value", 1), new { @id = "SelectedDotSize", @class = "form-control col-md-6" })
            @Html.ValidationMessageFor(model => model.SelectedDotSize, "", new { id = "SelectedDotSize-error", @class = "text-danger" })
        </div>
        <div class="">
            @Html.EditorFor(model => model.ShowPlanStatistics, new { htmlAttributes = new { @class = "" } })
            @Html.LabelFor(model => model.ShowPlanStatistics, new { htmlAttributes = new { @class = "control-label" } })
        </div>
        <div class="">
            @Html.EditorFor(model => model.ShowVolumes, new { htmlAttributes = new { @class = "" } })
            @Html.LabelFor(model => model.ShowVolumes, new { htmlAttributes = new { @class = "control-label" } })
        </div>
    </div>
</div>