@model IEnumerable<MOE.Common.Models.ApproachRoute>

@{
    ViewBag.Title = "Routes";
}

<h2>Routes</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RouteName)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.RouteName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ApproachRouteId }) |
            @Html.ActionLink("Approaches", "Index", "ApproachRouteDetails", new { id = item.ApproachRouteId }, new { }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ApproachRouteId })
        </td>
    </tr>
}

</table>
